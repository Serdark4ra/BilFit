<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="20dp"
    app:contentPadding="8dp">

    <RelativeLayout
        android:id="@+id/user_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageViewRequest"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circle_background"
            android:src="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/textRequestName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="94dp"
            android:layout_toStartOf="@+id/buttonAccept"
            android:text="Friend's Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textRequestUsername"
            android:layout_width="85dp"
            android:layout_height="17dp"
            android:layout_alignBottom="@+id/buttonAccept"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="107dp"
            android:layout_marginBottom="5dp"
            android:layout_toStartOf="@+id/buttonAccept"
            android:layout_toEndOf="@+id/imageFriend"
            android:text="username"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />

        <Button
            android:id="@+id/buttonAccept"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/buttonDeny"
            android:layout_alignParentTop="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="0dp"
            android:layout_toStartOf="@+id/buttonDeny"
            android:layout_weight="1"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:text="Accept"
            android:textAlignment="center"
            android:textSize="8sp" />

        <Button
            android:id="@+id/buttonDeny"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:paddingStart="0sp"
            android:paddingEnd="0dp"
            android:text="Deny"
            android:textAlignment="center"
            android:textSize="8sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>