<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="20dp"
        app:contentPadding="8dp">

    <RelativeLayout
        android:id="@+id/user_relative"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageViewFriend"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circle_background"
            android:src="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/textFriendName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/buttonCheckProfile"
            android:layout_marginStart="14dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="102dp"
            android:layout_marginBottom="4dp"
            android:layout_toStartOf="@+id/buttonCheckProfile"
            android:layout_toEndOf="@+id/imageFriend"
            android:text="Friend's Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textFriendUsername"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/buttonGoTogether"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="117dp"
            android:layout_marginBottom="2dp"
            android:layout_toStartOf="@+id/buttonGoTogether"
            android:layout_toEndOf="@+id/imageFriend"
            android:text="username"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />

        <Button
            android:id="@+id/buttonGoTogether"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/buttonCheckProfile"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="-101dp"
            android:layout_toStartOf="@+id/buttonCheckProfile"
            android:layout_weight="1"
            android:text="Go Together"
            android:textAlignment="gravity"
            android:textSize="8sp" />

        <Button
            android:id="@+id/buttonCheckProfile"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:text="Check Profile"
            android:textSize="8sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>